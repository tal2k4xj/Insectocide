<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenubackground"
    tools:context="insectocide.game.MultiplayerMenu">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FindOpponentButton"
        android:background="@drawable/findopponentbutton"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/logo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/FindOpponentButton"
        android:layout_alignParentTop="true"
        android:padding="50dp"
        android:background="@drawable/listbackground"/>

</RelativeLayout>
